generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  steamId   String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  sessions  PlaySession[]
}

model PlaySession {
  id              String   @id @default(cuid())
  gameName        String
  platform        String   // "Steam", "Blizzard", "EA", "Riot", "Other"
  startTime       DateTime
  durationSeconds Int
  
  userId          String?
  user            User?    @relation(fields: [userId], references: [id])

  createdAt       DateTime @default(now())
  
  @@index([userId])
}

model SteamGame {
  appId           Int      @id
  name            String
  playtimeForever Int      // Total playtime in minutes from Steam API
  iconUrl         String?
  lastSyncedAt    DateTime @default(now())
}
